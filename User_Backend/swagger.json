{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "My Fundoo Notes Project",
        "description": "My Fundoo Notes Project Application API",
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "host": "localhost:4000",
    "basePath": "/",
    "tags": [
        {
            "name": "Fundoo Notes",
            "description": "API for users in the system"
        }
    ],
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
   
    "securityDefinitions":{
        "token":{
            "type":"apiKey",
            "name":"token",
            "in":"header"
        }
    },
    "security":[
        {
            "token":[]
        }
    ],




    "paths": {
        "/registration": {
            "post": {
                "summary":"Register new user",
                "tags": [
                    "Users"
                ],
                "description": "To register new User",
                "parameters": [
                    {
                        "name": "user",
                        "in": "body",
                        "description": "User want to register",
                        "Schema": {
                            "$ref": "#/definitions/Users"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Users"
                        }
                    },
                    "500":{
                        "description":"User registration failed"
                    }
                }
            }
        },
    "/login": {
        "post": {
            "summary": "Login user",
            "tags": [
                "Users"
            ],
            "description": "Login user in Fundoo Notes",
            "parameters": [
                {
                    "name": "user",
                    "in": "body",
                    "description": "Logging in",
                    "Schema": {
                        "$ref": "#/definitions/Login"
                    }
                }
            ],
            "responses": {
                "200": {
                    "description": "OK",
                    "schema": {
                        "$ref": "#/definitions/Login"
                    }
                },
                "500":{
                    "description":"User login failed"
                }
            }
        }
    },
    
    "/forgotpassword":{
        "post":{
            "summary": "Forgot Password",
        "tags": [
            "Users"
        ],
        "description": "Link for forget password",
        "parameters": [
            {
                "name": "user",
                "in": "body",
                "description": "Change your password",
                "Schema": {
                    "$ref": "#/definitions/ForgotPassword"
                }
            }
        ],
        "responses": {
            "200": {
                "description": "OK",
                "schema": {
                    "$ref": "#/definitions/ForgotPassword"
                }
            },
            "500":{
                "description":"Something went wrong"
            }
        }
    }
},

    "/resetpassword/:token":{
        
        "post":{
            "summary": "Reset Password",
            "tags": [
                "Users"
            ],
            "description": "Reset Password",
            "parameters": [
                {
                    "name": "user",
                    "in": "body",
                    "description": "Change your password",
                    "Schema": {
                        "$ref": "#/definitions/ResetPassword"
                    }
                }
            ],
            "responses": {
                "200": {
                    "description": "OK",
                    "schema": {
                        "$ref": "#/definitions/ResetPassword"
                    }
                },
                "500":{
                    "description":"something wemt wrong"
                }
            }
        }
    },

    "/note": {
        "post": {
            "summary":"create new notes",
            "tags": [
                "Notes"
            ],
            "description": "To create new Note",
            "parameters": [
                {
                    "name": "Notes",
                    "in": "body",
                    "description": "User want to create Note",
                    "Schema": {
                        "$ref": "#/definitions/createNote"
                    }
                }
            ],
            "produces": [
                "application/json"
            ],
            "responses": {
                "200": {
                    "description": "Note added Succesfully",
                    "schema": {
                        "$ref": "#/definitions/createNote"
                    }
                },
                "500":{
                    "description":"something wemt wrong"
                }
            }
        },

    "get": {
        "summary": "Getting All Notes of User",
        "tags": [
            "Notes"
        ],
        "description": "Get Notes",
        "parameters": [
            {
                "name": "Notes",
                "description": "Creating Note"
            }
        ],
        "produces": [
            "application/json"
        ],
        "responses": {
            "200": {
                "description": "Getting All Note sucessfully"
            },
            "500": {
                "description": "some Error occure!!"
            }
        }
    }
},

"/note/{id}": {
    "delete": {
        "summary": "Delete Notes",
        "tags": [
            "Notes"
        ],
        "description": "Note deleted from the system",
        "parameters": [
            {
                "name": "id",
                "in": "path",
                "required": "true",
                "description": "Note id(which is supposed to be deleted) "
            }
        ],
        "produces": [
            "application/json"
        ],
        "responses": {
            "200": {
                "description": "Note added sucessfully"
            },
            "500": {
                "description": "error occured!!"
            }
        }
    },

    "put": {
        "summary": "Modify Notes",
        "tags": [
            "Notes"
        ],
        "description": "Modify Note from the system",
        "parameters": [
            {
                "name": "details",
                "in": "body",
                "required": "true",
                "description": "Data which you want to Modify ",
                "schema": {
                    "$ref": "#/definitions/createNote"
                }
            },
            {
                "name": "id",
                "in": "path",
                "required": "true",
                "description": "Note id(which is supposed to be modified) "
            }
        ],
        "produces": [
            "application/json"
        ],
        "responses": {
            "200": {
                "description": "Note added sucessfully",
                "schema": {
                    "$ref": "#/definitions/createNote"
                }
            },
            "500": {
                "description": "error occured!!"
            }
        }
    }
},

"/note/archive/{id}": {
    "put": {
        "summary": "Move Note to Archive",
        "tags": [
            "Notes"
        ],
        "description": "Notes to Be ISArchived or !ISArchived",
        "parameters": [
            {
                "name": "id",
                "in": "path",
                "required": "true",
                "description": "Note id(which is supposed to be Archive) "
            }
        ],
        "produces": [
            "application/json"
        ],
        "responses": {
            "200": {
                "description": "Note sucessfully Archived"
            },
            "500": {
                "description": "error occured!!"
            }
        }
    }
},

"/note/trash/{id}": {
    "put": {
        "summary": "Move Note to Trash",
        "tags": [
            "Notes"
        ],
        "description": "Notes to Be TRASH or !TRASH",
        "parameters": [
            {
                "name": "id",
                "in": "path",
                "required": "true",
                "description": "Note id(which is supposed to be Trash) "
            }
        ],
        "produces": [
            "application/json"
        ],
        "responses": {
            "200": {
                "description": "Note sucessfully Trash"
            },
            "500": {
                "description": "error occured!!"
            }
        }
    }
},

"/label":{
    "post": {
        "summary": "Add new Label on Notes",
        "tags": [
            "Labels"
        ],
        "description": "Add new Label on Notes",
        "parameters": [
            {
                "name": "labelName",
                "in": "body",
                "description": "Add new Label on Notes",
                "schema": {
                    "$ref": "#/definitions/Addlabel"
                }
            }
        ],
        "produces": [
            "application/json"
        ],
        "responses": {
            "200": {
                "description": "Label Added Sucessfully",
                "schema": {
                    "$ref": "#/definitions/Addlabel"
                }
            },
            "500": {
                "description": "Some Error Occured!!"
            }
        }
    },
    "get": {
        "summary": "Getting All Label",
        "tags": [
            "Labels"
        ],
        "description": "Getting All Label",
        "produces": [
            "application/json"
        ],
        "responses": {
            "200": {
                "description": "Getting All Label sucessfully"
            },
            "500": {
                "description": "some Error occure!!"
            }
        }
    }
},

    "definitions": {
        "Users": {
            "properties": {
                "firstName": {
                    "type": "string"
                },
                "lastName": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "mobile": {
                    "type": "number"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "Login":{
            "properties":{
                "email":{
                    "type":"string"
                },
                "password":{
                    "type":"string"
                }
            }
        },
        "ForgotPassword":{
            "properties":{
                "email":{
                    "type":"string"
                }
            }
        },
        "ResetPassword":{
            "properties":{
                "password":{
                    "type":"string"
                }
            }
        },

        "createNote":{
            "properties":{
                "Title":{
                   "type":"string"
                },
                "Description":{
                    "type":"string"
                }
            }
        },

        "label":{
            "properties": {
                "labelId": {
                    "type": "string"
                }
            }
        }

    }
}
}


            
        
    
    
    